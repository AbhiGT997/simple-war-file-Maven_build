# Stage 1: Build the Java web application
FROM maven:3.8.3-openjdk-11 AS build
WORKDIR /app
COPY pom.xml .
COPY src ./src
RUN mvn package

# Stage 2: Deploy the WAR file to Tomcat
FROM tomcat:9.0.56-jdk11-openjdk-slim-buster
MAINTAINER root
RUN apt-get update && apt-get install -y nano
RUN apt-get install -y git && apt-get install -y tree
ENV CATALINA_HOME: /usr/local/tomcat
ENV CATALINA_BASE: /usr/local/tomcat
ENV CATALINA_TMPDIR: /usr/local/tomcat/temp
ENV JRE_HOME: /usr
COPY --from=build /target/hello-1.0.war /usr/local/tomcat/webapps.dist
EXPOSE 8080
CMD ["catalina.sh", "run"]
